if(WIN32)
    set(FFMPEG_SUBLIBS avcodec avformat avfilter avutil swcale)
    foreach(SUBLIB ${FFMPEG_SUBLIBS})
        string(TOUPPER ${SUBLIB} SUBLIB_UPPER) 
        find_path( ${SUBLIB_UPPER}_INCLUDE_DIR ${SUBLIB}.h PATH_SUFFIXES lib${SUBLIB} ffmpeg)
        find_library( ${SUBLIB_UPPER}_LIBRARIES ${SUBLIB} lib${SUBLIB})
    endforeach(SUBLIB ${FFMPEG_SUBLIBS})
else(WIN32)
    pkg_search_module(AVCODEC REQUIRED libavcodec)
    pkg_search_module(AVFORMAT REQUIRED libavformat)
    pkg_search_module(AVFILTER REQUIRED libavfilter)
    pkg_search_module(SWSCALE REQUIRED libswscale)
    set(FFMPEG_FOUND YES)
endif(WIN32)

set(FFMPEG_LIBRARIES ${AVCODEC_LIBRARIES} ${AVFORMAT_LIBRARIES} ${AVFILTER_LIBRARIES} ${SWSCALE_LIBRARIES})
set(FFMPEG_LIBRARY_DIRS ${AVCODEC_LIBRARY_DIRS} ${AVFORMAT_LIBRARY_DIRS} ${AVFILTER_LIBRARY_DIRS} ${SWSCALE_LIBRARY_DIRS})
set(FFMPEG_INCLUDE_DIRS ${AVCODEC_INCLUDE_DIRS} ${AVFORMAT_INCLUDE_DIRS} ${AVFILTER_INCLUDE_DIRS} ${SWSCALE_INCLUDE_DIRS})

