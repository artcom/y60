# $Id: build.config,v 1.18 2004/11/19 14:59:40 martin Exp $

project.type = library
project.prefix = asl
project.name = base

source.files = **/*.cpp
header.files = **/*.h
test.sources = **/*.tst.cpp

platform.compiler.options.linux = ${pkg.pkg-config.cflags}
platform.linker.options.linux = ${pkg.pkg-config.libs}
platform.linker.options.osx =


external.libraries.linux = dl

frameworks.osx = Carbon

external.test.libraries =
external.test.libraries.linux = pthread, rt
external.test.libraries.windows = libcurl, winmm, pthreadVC, gdi32, user32, shell32, AdvAPI32, shlwapi, psapi

exclude.source.files = Thread.cpp

exclude.source.files.windows = Thread.cpp, ThreadSemFactory.cpp, ThreadSem.cpp, DebugLog.cpp,

exclude.source.files.linux = ComSingleton.cpp
exclude.source.files.osx = ComSingleton.cpp

exclude.test.sources         = testThreadFifo.tst.cpp
exclude.test.sources.linux   = testThreadSemFactoryPerformance.tst.cpp
exclude.test.sources.windows = testDebugLog.tst.cpp, testItimer.tst.cpp, testPrioCeilingRWLock.tst.cpp, testShellScript.tst.cpp, testThreadSem.tst.cpp, testThreadSemFactory.tst.cpp, testThreadSemFactoryPerformance.tst.cpp
exclude.test.sources.osx     = testThreadSemFactoryPerformance.tst.cpp

revision.export = true

test.runtimes.report = ${env.PRO}/doc/reports/profile_aslbase
test.runtimes.tests  = *
exclude.runtimes.tests  = testMultiThreadedUnitTest, testUnitTest
