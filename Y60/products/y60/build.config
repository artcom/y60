## Name of the library/application
project.type = application
project.name = y60
#winapp=1
project.prefix = y60
extra.application.files=sv iv convert_x60_EulerToQuaternion

platform.compiler.options.linux = ${pkg.pkg-config.cflags}
platform.linker.options.linux = ${pkg.pkg-config.libs}
 
frameworks.osx = OpenGL, Carbon, Cocoa, Cg 

extra.include.dir.osx = /usr/X11R6/include
   

# Comma separated list of Names of
# external libraries

# WARNING: SDL-stuff must be in external.libraries.windows - do not move it to
#          external.libraries, otherwise libpng's main() will be called
# external.libraries = Cg, CgGL 
# Tested only for linux, remove once the build goes through
#, avcodec, avformat

early.external.libraries.windows = SDL, SDLmain
external.libraries.windows = libpng, libtiff, libjpeg, libungif, opengl32, glu32, shell32, libcurl, \
                             gdi32, user32, Netapi32, pthreadVC, winmm, \
                             ws2_32, libfreetype, advapi32, libgcc, dxguid, zdll \
                             Imath, Cg, CgGL, Iphlpapi

external.libraries.linux = png, tiff, jpeg, GLU, GL, pthread, rt, curl, gif, asound, freetype, SDL, Half, Cg, CgGL

external.libraries.osx = X11, GL, GLU, png, tiff, jpeg, curl, gif, Half, SDL, SDLmain

# Comma separated list of Names of variant libraries
variant.libraries = aslbase, aslmath, aslserial, aslnet, aslipc, domxml, \
                    y60base, y60scene, y60image, y60video, \
                    y60input, y60inet, y60render, y60glutil, y60jsbase, y60jslib, \
                    y60gltext, y60sdlengine, \
                    sdlttf2, jsspidermonkey, y60modelling, aslzip, paintlib

# Comma separated list of Names/Patterns of all source files
source.files = **/*.cpp, **/*.c++, **.c
source.files.windows =
source.files.linux =
exclude.source.files = **/*.tst.cpp, **/*.tst.c++
exclude.source.files.windows =
exclude.source.files.linux =

# Comma separated list of Names/Patterns of header files to install
header.files = **/*.h
exclude.header.files =

# Comma separated list of Names/Patterns of all test sources
test.sources = **/*.tst.cpp, **/*.tst.c++
test.sources.windows =
test.sources.linux =

exclude.test.sources = y60.cpp
exclude.test.sources.windows =
exclude.test.sources.linux =

# Comma separated list of variant libraries for tests
variant.test.libraries = aslbase, aslmath, aslserial, aslnet, domxml, \
                    y60inet, y60render, y60scene, y60glutil, y60base, \
                    y60gltext, y60jslib, sdlttf2, jsspidermonkey, \
                    y60modelling, y60input, \
                    aslzip, y60image, y60video

# Comma separated list of external libraries for tests
external.test.libraries = png, tiff, jpeg, GL, GLU, Cg, CgGL, avcodec, avformat, SDL
external.test.libraries.windows = SDLmain, libcurl, gdi32, user32, pthreadVC, winmm
external.test.libraries.linux = pthread, rt, curl, gif, asound
